<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="annotatedClasses">
			<list>
				<value>com.railinc.r2dq.domain.tasks.ExceptionRemediationTask</value>
				<value>com.railinc.r2dq.domain.tasks.ManualRemediationTask</value>
				<value>com.railinc.r2dq.domain.InboundMessage</value>
				<value>com.railinc.r2dq.domain.OutboundMessage</value>
				<value>com.railinc.r2dq.domain.UserGroup</value>
				<value>com.railinc.r2dq.domain.UserGroupMember</value>
				<value>com.railinc.r2dq.domain.SourceSystem</value>
				<value>com.railinc.r2dq.domain.DataException</value>
				<value>com.railinc.r2dq.domain.tasks.Task</value>
				<value>com.railinc.r2dq.domain.Responsibility</value>
				<value>com.railinc.r2dq.domain.SystemAuditLog</value>
				<value>com.railinc.r2dq.domain.ConfigurationProperty</value>
				<value>com.railinc.r2dq.domain.I18nMessage</value>
				<value>com.railinc.r2dq.domain.Implementation</value>
			</list>
		</property>
		<property name="entityInterceptor">
			<bean class="com.railinc.r2dq.domain.AuditListener" />
		</property>
		<property name="hibernateProperties">
			<util:map>
				<entry key="hibernate.dialect" value-ref="hibernateDialect"/>
				<!--  do not change this. use log4j's hibernate category org.hibernate.SQL to view the SQL -->
				<entry key="hibernate.show_sql" value="false"/>
				<entry key="hibernate.hbm2ddl.auto" value-ref="hibernateHbm2ddlAuto"/>
				<entry key="hibernate.default_schema" value-ref="r2dqSchema"/>
			</util:map>
		</property>
	</bean>

	<bean id="transactionManager"
		class="org.springframework.orm.hibernate3.HibernateTransactionManager" p:sessionFactory-ref="sessionFactory"/>

</beans>